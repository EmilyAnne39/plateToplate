<h4>Which cuisine are you interested in learning?</h4>

<%= form_for(@interest) do |f| %>
  <% if @interest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@interest.errors.count, "error") %> prohibited this interest from being saved:</h2>
      <ul>
      <% @interest.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
   <div class="form-group">
     <div class="col-md-8">
       <%= f.collection_select(:cuisine_id, Cuisine.all, :id, :name) %><br />
     </div>
     <div class="form-group">
       <%= f.number_field :user_id, value: current_user.id %>
       <%= f.check_box :learn, value: false %>
     </div></br>

  </form>

  <div class="action-group">
    <div class="col-md-6">
      <%= f.submit "Submit", class:"btn btn-default"%>
      <%= f.submit "Add Another Cuisine!", class:"btn btn-default"%>
      <%= link_to 'Add Another Cuisine!', interests_learn_new_path, class:"btn btn-default" %>
    </div>
  </div>
<% end %>
